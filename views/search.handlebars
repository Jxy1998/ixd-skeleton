<body>
	<div class="container">
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->
		<div style=";font-size:12px;" align="right">
			<button onclick="goBack()">Go Back</button>
		</div>
		<script>
		function goBack() {
		  window.history.back();
		}
		</script>
		
		<div align="middle" class="jumbotron">
			<h1>Where To Eat</h1>
		</div>

		<h4 style=";font-size:30px;" align="center"><b>Search</b></h4>
			<div style=";font-size:30px; class="project" id="Location">
				<span>From:</span>
				<select class="ui dropdown">
				  <option value="">Location</option>
				  <option value="0">My Location</option>
				  <option value="1">Google Maps</option>
				</select>
			</div>
			
			<div style=";font-size:30px;" class="project" id="Craving">
				<span>Craving:</span>
				<select class="ui dropdown">
				  <option value="">Craving</option>
				  <option value="0">Fast Food</option>
				  <option value="1">Chinese</option>
				  <option value="2">Pizza</option>
				  <option value="3">Japanese</option>
				  <option value="4">Pasta</option>
				</select>
			</div>
			
			<div style=";font-size:30px;" class="project" id="Budget">
				<span>Budget:</span>
				<select class="ui dropdown">
				  <option value="">Budget</option>
				  <option value="0">$</option>
				  <option value="1">$$</option>
				  <option value="2">$$$</option>
				  </select>
			</div>
			
			<br></br><br></br>
			
			<div style=";font-size:40px;" align="middle" class="wrapper" id="Results">
				<button class="button" type="button">Pick Me One!</button>
			</div>
			
			
	</div>
	
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/introHCI.js"></script>
</body>
